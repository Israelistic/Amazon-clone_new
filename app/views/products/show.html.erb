<h1>Product Description</h1>
<h2><%=link_to "Back To Products Page", products_url%></h2>
<h3><%=@product.name%></h3>
<p><%= @product.desciption%></p>
<p><%= @product.price_in_cents%></p>
<p><%=image_tag(@product.url)%></p>

<%= link_to "Edit", edit_product_url(@product) %>
| <%= link_to "Delete", product_url(@product), method: :delete, data: {confirm: "Are you sure you want to delete the product '#{@product.name}'? This cannot be undone!"} %>
